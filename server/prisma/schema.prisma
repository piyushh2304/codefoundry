generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String? // Optional because Google users won't have a password
  name         String?
  picture      String?
  role         String   @default("user")
  provider     String   @default("local") // "local" or "google"
  googleId     String?  @unique
  snippets     Snippet[]
  chatMessages ChatMessage[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ... snippets and steps ...

model ChatMessage {
  id        String   @id @default(uuid())
  role      String   // "user" or "assistant"
  content   String   @db.Text
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Language {
  id         String     @id @default(uuid())
  name       String     @unique // e.g., "JavaScript", "Python"
  slug       String     @unique // e.g., "javascript", "python"
  icon       String? // URL or icon name
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Category {
  id         String    @id @default(uuid())
  name       String // e.g., "MERN Auth", "Utils"
  slug       String // e.g., "mern-auth"
  languageId String
  language   Language  @relation(fields: [languageId], references: [id])
  snippets   Snippet[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([languageId, slug]) // Categories must be unique per language
}

model Snippet {
  id            String   @id @default(uuid())
  title         String // e.g., "JWT Authentication Middleware"
  feature       String?
  code          String?  @db.Text // Optional if using steps
  description   String?
  isAiGenerated Boolean  @default(false)
  categoryId    String?
  category      Category? @relation(fields: [categoryId], references: [id])
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  steps         SnippetStep[]
  isVisible     Boolean  @default(true)
  embedding     Unsupported("vector(3072)")?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SnippetStep {
  id          String  @id @default(uuid())
  title       String?
  description String? @db.Text
  code        String? @db.Text
  order       Int
  snippetId   String
  embedding   Unsupported("vector(3072)")?
  snippet     Snippet @relation(fields: [snippetId], references: [id], onDelete: Cascade)
}

